<ResourceDictionary
    xmlns:local="clr-namespace:ColorWheel.Controls"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:global="clr-namespace:ColorWheel.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <global:ColorManager
        x:Key="ColorManager" />

    <global:TemplateColor
        x:Key="Window"
        Name="Window"
        Category="General"
        Description="Window background"
        Color="#FF393939" />

    <global:TemplateColor
        x:Key="WindowText"
        Name="WindowText"
        Category="General"
        Description="Window text"
        Color="White" />

    <global:TemplateColor
        x:Key="Border"
        Name="Border"
        Category="General"
        Description="Default border"
        Color="#FF111111" />

    <global:TemplateColor
        x:Key="BorderShadow"
        Name="BorderShadow"
        Category="Button"
        Description="Button border shadow"
        Color="#FFA3A3A3" />

    <global:TemplateColor
        x:Key="Background"
        Name="Background"
        Category="General"
        Description="Toolbar Background"
        Color="#44000000" />

    <global:TemplateColor
        x:Key="Foreground"
        Name="Foreground"
        Category="General"
        Description="Toolbar Foreground"
        Color="Black" />

    <global:TemplateColor
        x:Key="Highlight"
        Name="Highlight"
        Category="General"
        Description="Highlight background"
        Color="#FF71A7FF" />

    <global:TemplateColor
        x:Key="HighlightForeground"
        Name="HighlightForeground"
        Category="General"
        Description="Default highlight foreground"
        Color="Black" />

    <global:TemplateColor
        x:Key="DropdownBackground"
        Name="DropdownBackground"
        Category="General"
        Description="Dropdown Background"
        Color="#AA252525" />

    <global:TemplateColor
        x:Key="DropdownForeground"
        Name="DropdownForeground"
        Category="General"
        Description="Dropdown Foreground"
        Color="White" />

    <global:TemplateColor
        x:Key="ErrorBackground"
        Name="ErrorBackground"
        Category="General"
        Description="Error background"
        Color="#E67C0007" />

    <global:TemplateColor
        x:Key="ErrorText"
        Name="ErrorText"
        Category="General"
        Description="Error text"
        Color="White" />

</ResourceDictionary>
